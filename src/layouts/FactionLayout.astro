---
// 1. Die content-Eigenschaft bietet Zugriff auf Frontmatter-Daten
const { title, tags, image } = Astro.props;
import Header from '../components/Header.astro'
import DefaultHead from '../components/DefaultHead.astro';

const portrait = image ? `url(${image})` : 'url("/InfiniteSpaceLogo.svg")';;
---
<html>
  <head>
    <DefaultHead/>
  </head>
  <header>
    <Header></Header>
  </header>
  <body>
    <div class="main-container">
      <slot />
    </div>
  </body>
</html>

<style is:global lang="scss"  define:vars={{portrait}}>
  :root {
		--background-color: #18191a;
		--heading-color: #b1cadb;
		--font-color: #647681;
		--font: 'Open Sans', sans-serif;
	}

  html {
    height: 100%;
  }

  body {
    min-height: 100%;
    background-image: var(--portrait);
		background-color: var(--background-color);
    background-repeat: no-repeat;
    background-position: center
	}

	h1, h2, h3, p, em, strong, li{
		font-family: var(--font);
	}

  h1, h2, h3, ul {
    color: var(--heading-color);
  }

  p, li {
    color: var(--font-color);
  }

  .main-container {
		width: 100%;
    height: 100%;
		display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    align-content: center;
    justify-content: center;
	}

  .content {
    width: 90%;
    display: grid;
    grid-template-columns: 80% 20%;
    grid-template-rows: 100%;
    grid-column-gap: 20px;
    grid-row-gap: 0px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 10px;
  }

  .main-content {
    padding-left: 10px;
  }

  .sidebar {
    background-color: rgb(151, 182, 200);
    border-radius: 5px;
  }

  .sidebar {
    padding: 3px;
    h1, h2, h3, li, ul, p {
      color: black;
    }
  }
</style>